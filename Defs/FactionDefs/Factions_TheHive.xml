    <pawnsPlural>insects</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <fixedName>Insect Hive</fixedName>
    <raidCommonalityFromPointsCurve>
        <points>
        <li>(700, 0.1)</li>
        <li>(900, 0.2)</li>
        <li>(1200, 1)</li>
        <li>(4000, 1.5)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <humanlikeFaction>false</humanlikeFaction>
    <hidden>false</hidden>
    <autoFlee>false</autoFlee>
    <canUseAvoidGrid>false</canUseAvoidGrid>
    <techLevel>Animal</techLevel>
    <earliestRaidDays>45</earliestRaidDays>
    <permanentEnemy>true</permanentEnemy>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(400,200)</li>
        <li>(900,300)</li>
        <li>(100000,10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <!-- All types-->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <Mech_Centipede>10</Mech_Centipede>
          <Mech_Lancer>10</Mech_Lancer>
          <Mech_Scyther>10</Mech_Scyther>
        </options>
      </li>
      <li>
        <!-- Ranged only -->
        <kindDef>Combat</kindDef>
        <commonality>80</commonality>
        <options>
          <Mech_Centipede>10</Mech_Centipede>
          <Mech_Lancer>10</Mech_Lancer>
        </options>
      </li>
      <li>
        <!-- Melee only-->
        <kindDef>Combat</kindDef>
        <commonality>70</commonality>
        <options>
          <Mech_Scyther>10</Mech_Scyther>
        </options>
      </li>
      <li>
        <!-- Centipede only -->
        <kindDef>Combat</kindDef>
        <commonality>30</commonality>
        <options>
          <Mech_Centipede>10</Mech_Centipede>
        </options>
      </li>
    </pawnGroupMakers>
    <homeIconPath>World/WorldObjects/DefaultSettlement</homeIconPath>
    <allowedArrivalTemperatureRange>
      <min>0</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
  </FactionDef>

</Defs>