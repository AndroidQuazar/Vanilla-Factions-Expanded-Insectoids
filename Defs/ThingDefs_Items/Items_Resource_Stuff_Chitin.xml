<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Chitin -->
  <ThingDef ParentName="ResourceBase">
    <defName>VFEI_Chitin</defName>
    <label>chitin</label>
    <description>An extremely thick composition of rare minerals and biomass, commonly found in a form of insect exoskeletons.</description>
    <graphicData>
      <texPath>Things/Resource/Chitin</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>2.1</MarketValue>
      <Mass>0.125</Mass>
      <StuffPower_Armor_Sharp>1.1</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.5</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.25</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>2</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.75</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.5</BluntDamageMultiplier> <!-- Chitin is neither heavy nor sharp enough, made them armors -->
    </statBases>
    <useHitPoints>false</useHitPoints>
    <!-- <slagDef>ChunkSlagChitin</slagDef> -->
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>1.00</commonality>
      <constructEffect>ConstructDirt</constructEffect>
      <color>(98,73,62)</color>
      <soundImpactStuff>BulletImpact_Ground</soundImpactStuff> <!-- BulletImpact_Metal -->
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>1.1</MaxHitPoints>
        <Beauty>-1</Beauty>
        <Flammability>0.75</Flammability>
      </statFactors>
      <smeltable>true</smeltable>
    </stuffProps>
  </ThingDef>

</Defs>