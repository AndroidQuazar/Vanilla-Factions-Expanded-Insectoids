<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Queen Echoing Voice -->
  <DamageDef ParentName="BluntBase">
	<defName>VFEI_EchoingVoice</defName>
	<label>echoing voice</label>
    <workerClass>DamageWorker_Blunt</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been ruptured apart.</deathMessage>
    <hediffSkin>Cut</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Electric</impactSoundType>
    <armorCategory>Blunt</armorCategory>
    <overkillPctToDestroyPart>0.4~1.0</overkillPctToDestroyPart>
    <bluntStunDuration>5.0</bluntStunDuration>
    <bluntInnerHitChance>0.4</bluntInnerHitChance>
    <bluntInnerHitDamageFractionToConvert>
      <min>0.1</min>
      <max>0.2</max>
    </bluntInnerHitDamageFractionToConvert>
    <bluntInnerHitDamageFractionToAdd>
      <min>0.2</min>
      <max>0.35</max>
    </bluntInnerHitDamageFractionToAdd>
    <bluntStunChancePerDamagePctOfCorePartToHeadCurve>
      <points>
        <li>(0, 1)</li>
        <li>(0, 1)</li>
      </points>
    </bluntStunChancePerDamagePctOfCorePartToHeadCurve>
    <bluntStunChancePerDamagePctOfCorePartToBodyCurve>
      <points>
        <li>(0, 1)</li>
        <li>(0, 1)</li>
      </points>
    </bluntStunChancePerDamagePctOfCorePartToBodyCurve>
	<additionalHediffs>
		<li>
			<hediff>VFEI_EchoingVoice</hediff>
			<severityPerDamageDealt>0.0025</severityPerDamageDealt>
		</li>
	</additionalHediffs>
  </DamageDef>

  <!-- Empress Shrill Confusion -->
  <DamageDef ParentName="StunBase">
	<defName>VFEI_Shrill</defName>
	<label>shrill</label>
    <deathMessage>{0} has been brain melted to death.</deathMessage>
	<additionalHediffs>
		<li>
			<hediff>VFEI_ConfusionVibe</hediff>
			<severityPerDamageDealt>0.0025</severityPerDamageDealt>
		</li>
	</additionalHediffs>
  </DamageDef>

  <!-- Beetle Jump Attack -->
  <DamageDef ParentName="StunBase">
    <defName>VFEI_Leap</defName>
    <label>leap</label>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been crushed to death.</deathMessage>
    <defaultDamage>20</defaultDamage>
    <explosionCellMote>Mote_BlastDry</explosionCellMote>
    <soundExplosion>Explosion_Stun</soundExplosion>
    <combatLogRules>Damage_Stun</combatLogRules>
  </DamageDef>

</Defs>