<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>VFEI_Plant_Armillarix</defName>
    <label>armillarix</label>
    <description>A medium sized mushroom. When fully matured, its cap spreads open to release an inner bulb that emits very hard light, bright enough to grow other crops around it.</description>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
      <Beauty>4</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Armillarix/AMature</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible />
    <plant>
      <fertilitySensitivity>0.15</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawFungus</harvestedThingDef>
      <harvestYield>20</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.05</topWindExposure>
      <growDays>10</growDays>
      <visualSizeRange>0.4~0.85</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
      <immatureGraphicPath>Things/Armillarix/AImmature</immatureGraphicPath>
    </plant>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="VFEI.Comps.CompProperties_Armillarix" />
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(370,370,370,0)</glowColor>
        <overlightRadius>7.0</overlightRadius>
      </li>
    </comps>
  </ThingDef>

</Defs>